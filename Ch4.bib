	urldate = {2015-03-25},
	journal = {Journal of Applied Ecology},
	author = {Hamer, K. C. and Hill, J. K. and Benedick, S. and Mustaffa, N. and Sherratt, T. N. and Maryati, M. and K., Chey V.},
	month = feb,
