@article{beaumont_potential_2002,
	title = {Potential changes in the distributions of latitudinally restricted {Australian} butterfly species in response to climate change},
	volume = {8},
	issn = {1365-2486},
	url = {http://onlinelibrary.wiley.com/doi/10.1046/j.1365-2486.2002.00490.x/abstract},
