	author = {du Plessis, Katherine L. and Martin, Rowan O. and Hockey, Philip A. R. and Cunningham, Susan J. and Ridley, Amanda R.},
	month = oct,
	year = {2012},
	keywords = {body condition, body mass, Climate change, daily maximum temperature, foraging efficiency, foraging effort, Southern Pied Babbler, temperature-dependent behaviour, thermoregulation, trade-offs, Turdoides bicolor},
