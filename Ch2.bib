@article{gonzalez-di_pierro_effects2011,
	title = {Effects of the physical environment and primate gut passage on the early establishment of {Ampelocera} hottlei {Standley} in rain forest fragments},
	volume = {43},
	copyright = {¬© 2011 The Author(s). Journal compilation ¬© 2011 by The Association for Tropical Biology and Conservation},
