	file = {Full Text PDF:C\:\\Users\\Rebecca\\Documents\\Papers\\storage\\WMFKBX8K\\Parmesan and Yohe - 2003 - A globally coherent fingerprint of climate change .pdf:application/pdf;Snapshot:C\:\\Users\\Rebecca\\Documents\\Papers\\storage\\N4T3NKHG\\nature01286.html:text/html}
