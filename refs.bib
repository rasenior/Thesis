	journal = {Ecography},
	author = {Puurtinen, Mikael and Elo, Merja and Jalasvuori, Matti and Kahilainen, Aapo and Ketola, Tarmo and Kotiaho, Janne S. and Mönkkönen, Mikko and Pentikäinen, Olli T.},
