	month = oct,
	year = {2000},
	keywords = {forests, Trees with hollows, Cavities, Snags, South-eastern Australia, Statistical modelling},
	pages = {139--150},
	file = {Lindenmayer et al_2000_Cavity sizes and types in Australian eucalypts from wet and dry forest types–a.pdf:C\:\\Users\\Rebecca\\Google Drive\\Referencing\\Papers\\Lindenmayer et al_2000_Cavity sizes and types in Australian eucalypts from wet and dry forest types–a.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\Rebecca\\Documents\\Papers\\storage\\594EDWF6\\S0378112799003229.html:text/html}
