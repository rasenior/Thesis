@article{fayle_effect_2009,
	title = {The {Effect} of {Rain} {Forest} {Canopy} {Architecture} on the {Distribution} of {Epiphytic} {Ferns} (\textit{{A}}splenium spp.) in {Sabah}, {Malaysia}},
