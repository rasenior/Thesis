	pages = {5610--5615},
	file = {PubMed Central Full Text PDF:C\:\\Users\\Rebecca\\Documents\\Papers\\storage\\DX8IRU8V\\Sunday et al. - 2014 - Thermal-safety margins and the necessity of thermo.pdf:application/pdf}
}

@article{lewis_increasing_2015,
